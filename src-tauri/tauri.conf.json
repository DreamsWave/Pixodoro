{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "pixodoro",
    "version": "1.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": false,
        "hide": false,
        "show": false,
        "maximize": false,
        "minimize": false,
        "unmaximize": false,
        "unminimize": false,
        "startDragging": false
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pixodoro",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./icons/tray"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/tray/favicon-default.png",
      "iconAsTemplate": true,
      "title": "pixodoro",
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "width": 320,
        "height": 320,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "transparent": true,
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true
  }
}